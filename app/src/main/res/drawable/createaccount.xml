<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff"
                android:text="@color/colorPrimary_dark"/>
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary_dark"
                android:text="@color/colorPrimary_dark"/>
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <item>

        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/colorPrimary_dark"
                android:text="#FFA000" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
</selector>
