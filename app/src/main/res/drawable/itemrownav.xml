<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#3c5ca0"
                android:text="#ffffff"/>
            <stroke
                android:width="2dp"
                android:color="#3c5ca0"
                android:text="#ffffff"/>
            <corners
                android:radius="0dp" />

        </shape>
    </item>


    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>
