<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.FBLoginSample.activity.HomeFragment">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:weightSum="1">


        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="@drawable/layer_card"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.60"
                android:id="@+id/rela">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewFrom"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="From"
                    android:layout_alignTop="@+id/autoCompleteTextViewTo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewTo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="To"
                    android:layout_alignBottom="@+id/item_icon"
                    android:layout_toRightOf="@+id/autoCompleteTextViewFrom"
                    android:layout_toEndOf="@+id/autoCompleteTextViewFrom" />

                <RelativeLayout
                    android:id="@+id/item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">


                    <Button
                        android:id="@+id/search"
                        android:layout_width="60dp"
                        android:background="@drawable/btngo"
                        android:layout_height="60dp"
                        android:text="Go"
                        android:shadowRadius="@integer/abc_max_action_buttons"
                        android:clickable="false"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="18dp"
                        android:layout_marginEnd="18dp" />



                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


        <com.FBLoginSample.activity.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@color/icons"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            >
        </android.support.v4.view.ViewPager>


    </LinearLayout>
</RelativeLayout>

