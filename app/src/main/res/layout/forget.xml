<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <EditText

        android:textColorHint="#cccccc"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/send_email_txt"
        android:layout_marginTop="137dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Your Email" />


    <Button
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="SEND"
        android:id="@+id/send_email"
        android:layout_marginTop="44dp"
        android:background="@drawable/halima_button_def"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_alignRight="@+id/confirmPassword"
        android:layout_alignEnd="@+id/confirmPassword" />

    <Button
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="back to Sign in"
        android:id="@+id/signinbtn"
        android:layout_marginTop="10dp"
        android:background="@drawable/createaccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signUp"
        android:layout_alignRight="@+id/signUp"
        android:layout_alignEnd="@+id/signUp" />
    </LinearLayout>
</RelativeLayout>
