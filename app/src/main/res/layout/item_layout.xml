<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:id="@+id/ooo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/layer_card"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.60"
        android:id="@+id/rela">

        <!-- icon -->
        <RelativeLayout
            android:id="@+id/item_icon"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dp"
            android:contentDescription="icon"
            android:background="@drawable/layer_cardright"
            android:layout_alignParentTop="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/counter"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Station no:"
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/counter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St."
                android:textSize="10dp"
                android:gravity="right"
                android:layout_marginLeft="2dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/counter"
                android:layout_alignBottom="@+id/counter"
                android:layout_toRightOf="@+id/counter"
                android:layout_toEndOf="@+id/counter" />


        </RelativeLayout>




        <!-- title -->
        <ImageView
            android:id="@+id/item_subtitle"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:src="@drawable/busy"
            android:layout_marginLeft="5dp"
            android:tint="@color/button_material_dark"
            android:tintMode="multiply"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_icon"
            android:layout_above="@+id/relativeLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:background="@drawable/textlayout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/item_subtitle"
            android:layout_toEndOf="@+id/item_subtitle"
            android:id="@+id/buslinenumtxt" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/layer_carddown"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.60"
            android:id="@+id/relativeLayout"
            android:layout_alignBottom="@+id/item_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/item_icon"
            android:layout_toEndOf="@+id/item_icon">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/walk"
                android:tint="@color/button_material_dark"
                android:tintMode="multiply"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="255dp"
                android:layout_marginEnd="255dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignStart="@+id/imageView4"
                android:layout_alignParentBottom="true"
                android:id="@+id/txty" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bus"
                android:tint="@color/button_material_dark"
                android:tintMode="multiply"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txty"
                android:layout_toEndOf="@+id/txty"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 min"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView5" />
        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="icon"
            android:src="@drawable/arrows"
            android:id="@+id/imageView"
            android:layout_alignBottom="@+id/item_title"
            android:layout_alignRight="@+id/relativeLayout"
            android:layout_alignEnd="@+id/relativeLayout"
            android:layout_alignTop="@+id/item_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/accent_material_light"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"

            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/buslinenumtxt"
            android:layout_toEndOf="@+id/buslinenumtxt"
            android:layout_alignTop="@+id/buslinenumtxt"
            android:layout_toRightOf="@+id/buslinenumtxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station"
            android:textColor="@color/material_blue_grey_800"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/item_title"
            android:layout_alignTop="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:layout_alignBottom="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="3dp"
            android:id="@+id/typetxt"
            android:layout_alignTop="@+id/imageView"
            android:layout_toLeftOf="@+id/imageView"
            android:layout_toStartOf="@+id/imageView"
            />


    </RelativeLayout>

</LinearLayout>