<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/sign_Up"
    android:background="@drawable/balloon_bg">

    <TextView
        android:id="@+id/label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:text="NEW ACCOUNT"
        android:textStyle="bold"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="39dp" />


    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:hint="User Name"
            android:textColorHint="#cccccc"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />

        <EditText
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="#cccccc"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

        <EditText
        android:layout_marginTop="5dp"
        android:padding="10dp"

        android:textColorHint="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Password"
        android:ems="10"

        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText

        android:textColorHint="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:hint="Confirm Password"
        android:id="@+id/confirmPassword"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

        <Button
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:id="@+id/signUp"
        android:layout_marginTop="44dp"
        android:textColor="#ffffff"
        android:background="@drawable/halima_button_def"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:layout_alignRight="@+id/confirmPassword"
        android:layout_alignEnd="@+id/confirmPassword" />

        <Button
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="back to Sign in"
        android:id="@+id/signinbtn"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary_dark"
        android:background="@drawable/createaccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signUp"
        android:layout_alignRight="@+id/signUp"
        android:layout_alignEnd="@+id/signUp" />
    </LinearLayout>
</RelativeLayout>
