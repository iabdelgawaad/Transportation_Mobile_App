<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:weightSum="1"
    android:id="@+id/ooo">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/layer_card"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1.60"
        android:id="@+id/rela">

        <!-- icon -->
        <RelativeLayout
            android:id="@+id/item_icon"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dp"
            android:contentDescription="icon"
            android:background="@drawable/layer_cardright"
            android:layout_alignParentTop="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40dp"
                android:gravity="left"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/counter"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Station no:"
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/counter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St."
                android:textSize="10dp"
                android:gravity="right"
                android:layout_marginLeft="2dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/counter"
                android:layout_alignBottom="@+id/counter"
                android:layout_toRightOf="@+id/counter"
                android:layout_toEndOf="@+id/counter" />


        </RelativeLayout>




        <!-- title -->
        <ImageView
            android:id="@+id/item_subtitle"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:src="@drawable/busy"
            android:layout_marginLeft="5dp"
            android:tint="@color/button_material_dark"
            android:tintMode="multiply"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_icon"
            android:layout_above="@+id/relativeLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:background="@drawable/textlayout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/item_subtitle"
            android:layout_toEndOf="@+id/item_subtitle"
            android:id="@+id/buslinenumtxt" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/layer_carddown"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.60"
            android:id="@+id/relativeLayout"
            android:layout_alignBottom="@+id/item_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/item_icon"
            android:layout_toEndOf="@+id/item_icon">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUS"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="3dp"
                android:visibility="invisible"
                android:background="@drawable/textlayout"
                android:id="@+id/typetxt"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="icon"
            android:src="@drawable/arrows"
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/metro"
            android:visibility="invisible"
            android:tint="@color/button_material_dark"
            android:tintMode="multiply"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toRightOf="@+id/buslinenumtxt"
            android:layout_toEndOf="@+id/buslinenumtxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:padding="3dp"
            android:background="@drawable/textlayout"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/buslinenumtxt"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masr Station"
            android:textColor="@color/material_blue_grey_800"
            android:id="@+id/item_title"
            android:gravity="center"
            android:textStyle="bold"

            android:layout_alignBottom="@+id/imageView2"
            android:layout_toRightOf="@+id/buslinenumtxt"
            android:layout_toEndOf="@+id/buslinenumtxt"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_alignTop="@+id/textView5" />


    </RelativeLayout>

</LinearLayout>